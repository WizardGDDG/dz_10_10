
#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "rus");
    int n;
    int fact = 1;

    cout << "Введите число: ";
    cin >> n;

    for (int i = 2; i < n + 1; i++)
    {
        if (n > 0)
        {
            if (n != 0)
            {
                fact *= i;
            }
            else
            {
                fact = 0;
            }
        }
        else
        {
            cout << "Число отрицательное";
        }
    }
    cout << "Факториал " << n << " = " << fact;
}

